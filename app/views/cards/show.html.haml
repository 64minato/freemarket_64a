= render "layouts/mypage_header"
- breadcrumb :card
= render "layouts/breadcrumbs"
.all
  = render "mypage/side_bar"
  .mypage
    .mypage__card
      .mypage__card__title 支払い方法
      .mypage__card__main
        .mypage__card__main__box
          .mypage__card__main__box__list 
            .card__box
              %p クレジットカード一覧
              -#以下カード情報を表示
              .card__box__title
                カード番号
              .card__box__number
                = "**** **** **** " + @default_card_information.last4
                %p
                  - exp_month = @default_card_information.exp_month.to_s
                  - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                  = exp_month + " / " + exp_year
              = form_with url: new_card_path, controller: :cards, action: :destroy, method: :delete, id: 'charge-form',  name: "inputForm" do |f|
                =f.submit "削除する" , name: "card_id", class:"card__box__btn"

= render "layouts/footer"
= render "layouts/circle"
