= render "layouts/mypage_header"
- breadcrumb :identification
= render "layouts/breadcrumbs"
.all
  = render "mypage/side_bar"
  .mypage
    .mypage__card
      .mypage__card__title クレジットカード情報入力
      .mypage__card__main
        = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
          .card
            .card__main 
              カード番号
              %span.form-require 必須
              .signup-content__input-location
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number", class:"card__input"
            .signup__wrapper__registration__form__box
              有効期限
              %span.form-require 必須
            .card__day
              .signup-content__input-location
              %select#exp_month{name: "exp_month", type: "text", class:"input__days"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              .day 月/
              .signup-content__input-location
              %select#exp_year{name: "exp_year", type: "text", class:"input__days"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              .day 年
            .signup__wrapper__registration__form__box
              %span セキュリティコード
              %span.form-require 必須
              = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc", class:"card__input"
          #card_token
          = submit_tag "登録する", id: "token_submit", class:"card__box__btn"

= render "layouts/footer"