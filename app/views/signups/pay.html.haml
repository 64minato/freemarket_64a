      .signup__wrapper__registration__form
      = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
         -# = form_for @credit_card, url: finish_signups_path, method: :get, html: {class: 'first-main__box'} do |f|
        .signup__wrapper__registration__form__box
          カード番号
          %span.form-require 必須
          .signup-content__input-location
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          -# = f.text_field :credit_number, placeholder: '  例) 半角数字のみ', class:"input__default"
        .signup__wrapper__registration__form__box
          有効期限
          %span.form-require 必須
          .signup-content__input-location
          -# = f.select :limit_month, [["01", "01"], ["02", "02"],["03", "03"],["04", "04"],["05", "05"],["06", "06"],["07", "07"],["08", "08"],["09", "09"],["10", "10"],["11", "11"],["12", "12"]], class:"input__number"
